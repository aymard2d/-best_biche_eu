<%= simple_form_for(@booking) do |f| %>
  <div class="form-inputs">
    <%= f.input :starting_date, html5: true %>
    <%= f.input :ending_date, html5: true %>
    <%= f.input_field :animal_id, as: :hidden, input_html: { value: params[:id] } %>
  </div>
  <div class="form-actions">
    <button class=“button-48” role=“button”>
    <%= f.button :submit, "Réserver cet animal" %></button>
  </div>
<% end %>
